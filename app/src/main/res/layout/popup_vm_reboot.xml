<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorControlHighlight">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Target"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_RebootVM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_VMServer"
        android:layout_marginTop="86dp"
        android:onClick="RebootVM"
        android:text="Reboot VM" />

    <EditText
        android:id="@+id/et_VMServer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_vmName"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Server (Default : HV024BRU03)"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/et_vmName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="27dp"
        android:ems="10"
        android:hint="VM Name"
        android:inputType="textPersonName"
        android:text="" />

</RelativeLayout>